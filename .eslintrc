{
  "parser": "babel-eslint",
  "env": {
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:import/errors"],
  "rules": {
    "no-console": 0,
    "import/no-unresolved": 0
  },
  "globals": {
    "fetch": true,
    "Promise": true
  },
  "settings": {
    "react": {
      "version": "16"
    },
    "import/resolver": {
      "node": {
        "moduleDirectory": [
          "node_modules",
          "functions/node_modules"
        ]
      }
    }
  }
}
